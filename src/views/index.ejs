<!DOCTYPE html>
<html>
  <head>
    <title>Simple Blog</title> 
    <link rel="stylesheet" href="/style/style.css">


  </head>
  <body class="bg-gray-500 text-center">
    <h1 class="bg-gray-500 text-center">My Blog</h1>
    <a href="/new">+ Create New Post</a>
    <ul>
      <% posts.forEach(post => { %>
      <li>
        <a href="/posts/<%= post.id %>"><%= post.title %></a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
